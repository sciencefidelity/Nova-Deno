{
  "name": "nova-stylelint",
  "version": "0.1.0",
  "description": "Stylelint Language Server for Nova",
  "main": "main.ts",
  "scripts": {
    "build": "rollup -c rollup.config.main.js",
    "watch": "onchange -i 'src/**' 'rollup.*.js' -- npm run build",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:js": "eslint '**/*.{ts,js}'",
    "lint:format": "prettier --check '**/*.{ts,js,json,md,yml}'",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:js": "eslint --fix '**/*.{ts,js}'",
    "fix:format": "prettier --write '**/*.{ts,js,json,md,yml}'",
    "test": "jest --watchAll --verbose",
    "coverage": "jest --coverage"
  },
  "repository": "https://github.com/sciencefidelity/Nova-Stylelint.git",
  "author": "Matt Cook",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/sciencefidelity/Nova-Stylelint/issues"
  },
  "homepage": "https://github.com/sciencefidelity/Nova-Stylelint",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@types/nova-editor-node": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-prettier": "^8.4.0",
    "jest": "^27.5.1",
    "nova-extension-utils": "^1.4.0",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rollup": "^2.67.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vscode-languageclient": "^7.0.0"
  }
}
